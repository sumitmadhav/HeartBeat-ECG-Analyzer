# Environment Configuration for Brain Mapping EEG Classification System

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=9999
FLASK_HOST=0.0.0.0

# File Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads

# EEG Processing Settings
WAVELET_TYPE=db1
DECOMPOSITION_LEVELS=3
CLASSIFICATION_THRESHOLD=600
REFERENCE_PATTERNS_COUNT=5

# Data Directories
REFERENCE_SIGNALS_DIR=data/reference_signals
TEST_SAMPLES_DIR=data/test_samples

# Signal Generation Parameters
SAMPLING_FREQUENCY=256  # Hz
SIGNAL_DURATION=10      # seconds
NOISE_LEVEL=0.1

# Performance Settings
MAX_CONCURRENT_USERS=10
PROCESSING_TIMEOUT=30   # seconds
CACHE_ENABLED=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/brain_mapping.log

# Development Settings
DEBUG_MODE=True
PROFILING_ENABLED=False
VERBOSE_OUTPUT=True